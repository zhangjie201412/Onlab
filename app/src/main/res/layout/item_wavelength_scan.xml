<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_index"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_margin_top_bottom"
        android:layout_marginTop="@dimen/list_margin_top_bottom"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/color_content_text"
        android:textSize="@dimen/list_text_size" />

    <TextView
        android:id="@+id/item_wavelength"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_margin_top_bottom"
        android:layout_marginTop="@dimen/list_margin_top_bottom"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="@color/color_content_text"
        android:textSize="@dimen/list_text_size" />

    <TextView
        android:id="@+id/item_abs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_margin_top_bottom"
        android:layout_marginTop="@dimen/list_margin_top_bottom"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="@color/color_content_text"
        android:textSize="@dimen/list_text_size" />

    <TextView
        android:id="@+id/item_trans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_margin_top_bottom"
        android:layout_marginTop="@dimen/list_margin_top_bottom"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="@color/color_content_text"
        android:textSize="@dimen/list_text_size" />


    <TextView
        android:id="@+id/item_energy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_margin_top_bottom"
        android:layout_marginTop="@dimen/list_margin_top_bottom"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="@color/color_content_text"
        android:textSize="@dimen/list_text_size" />

    <CheckBox
        android:id="@+id/item_checkbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_weight="0.5"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

</LinearLayout>