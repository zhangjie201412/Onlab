<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="@dimen/dialog_margin"
        android:layout_marginLeft="@dimen/dialog_margin_left"
        android:layout_marginRight="@dimen/dialog_margin_right"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/colorDialogText"
            android:textSize="@dimen/dialog_textsize"
            android:layout_marginRight="@dimen/dialog_margin"
            android:text="@string/start_time"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/dialog_et_start_time"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="@dimen/dialog_margin"
        android:layout_marginLeft="@dimen/dialog_margin_left"
        android:layout_marginRight="@dimen/dialog_margin_right"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/colorDialogText"
            android:textSize="@dimen/dialog_textsize"
            android:layout_marginRight="@dimen/dialog_margin"
            android:text="@string/end_time"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/dialog_et_end_time"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="@dimen/dialog_margin"
        android:layout_marginLeft="@dimen/dialog_margin_left"
        android:layout_marginRight="@dimen/dialog_margin_right"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/colorDialogText"
            android:textSize="@dimen/dialog_textsize"
            android:layout_marginRight="@dimen/dialog_margin"
            android:text="@string/calc_ratio"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/dialog_et_calc_ratio"
            android:inputType="numberDecimal"
            android:digits="0123456789-."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>