<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="800dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_formalu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/setting_margin_item"
        android:background="@color/color_button_pressed"
        android:focusable="true"
        android:textSize="@dimen/title_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/setting_margin_item"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/analysis_method"
                android:textColor="@color/color_setting"
                android:textSize="@dimen/setting_title" />

            <RadioGroup
                android:id="@+id/rg_analysis_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dna_setting_margin_top">

                <RadioButton
                    android:id="@+id/rb_method_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/setting_margin_item"
                    android:layout_marginTop="@dimen/setting_margin_item"
                    android:text="@string/method_one"
                    android:textSize="@dimen/setting_content" />

                <RadioButton
                    android:id="@+id/rb_method_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/setting_margin_item"
                    android:layout_marginTop="@dimen/setting_margin_item"
                    android:text="@string/method_two"
                    android:textSize="@dimen/setting_content" />

                <RadioButton
                    android:id="@+id/rb_method_custom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/setting_margin_item"
                    android:layout_marginTop="@dimen/setting_margin_item"
                    android:text="@string/method_custom"
                    android:textSize="@dimen/setting_content" />
            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/setting_margin_item"
            android:layout_weight="1.2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wavelength_setting"
                android:textColor="@color/color_setting"
                android:textSize="@dimen/setting_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dna_setting_margin_top"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/wavelength1"
                        android:textSize="@dimen/setting_content" />

                    <EditText
                        android:id="@+id/et_wavelength1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:digits="0123456789-."
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/setting_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/nm"
                        android:textSize="@dimen/setting_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/wavelength2"
                        android:textSize="@dimen/setting_content" />

                    <EditText
                        android:id="@+id/et_wavelength2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:digits="0123456789-."
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/setting_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/nm"
                        android:textSize="@dimen/setting_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/wavelength_ref"
                        android:textSize="@dimen/setting_content" />

                    <EditText
                        android:id="@+id/et_wavelength_custom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:digits="0123456789-."
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/setting_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/nm"
                        android:textSize="@dimen/setting_content" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/setting_margin_item"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/parameter_setting"
                android:textColor="@color/color_setting"
                android:textSize="@dimen/setting_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dna_setting_margin_top"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/F1"
                        android:textSize="@dimen/setting_content" />

                    <EditText
                        android:id="@+id/et_f1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:digits="0123456789-."
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/setting_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/F2"
                        android:textSize="@dimen/setting_content" />

                    <EditText
                        android:id="@+id/et_f2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:digits="0123456789-."
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/setting_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/F3"
                        android:textSize="@dimen/setting_content" />

                    <EditText
                        android:id="@+id/et_f3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:digits="0123456789-."
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/setting_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/F4"
                        android:textSize="@dimen/setting_content" />

                    <EditText
                        android:id="@+id/et_f4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:digits="0123456789-."
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/setting_content" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>