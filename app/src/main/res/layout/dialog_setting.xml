<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="@dimen/dialog_margin"
        android:layout_marginLeft="@dimen/dialog_margin_left"
        android:layout_marginRight="@dimen/dialog_margin_right"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_tv"
            android:layout_width="wrap_content"
            android:textColor="@color/colorDialogText"
            android:textSize="@dimen/dialog_textsize"
            android:layout_marginRight="@dimen/dialog_margin"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/dialog_et"
            android:layout_width="match_parent"
            android:digits="0123456789-."
            android:inputType="numberDecimal"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>