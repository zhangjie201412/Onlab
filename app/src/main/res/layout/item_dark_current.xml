<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_gain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_margin_top_bottom"
        android:layout_marginTop="@dimen/list_margin_top_bottom"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/color_baseline_text"
        android:textSize="@dimen/list_text_size" />

    <TextView
        android:id="@+id/item_sample_dark_current"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_margin_top_bottom"
        android:layout_marginTop="@dimen/list_margin_top_bottom"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="@color/color_baseline_text"
        android:textSize="@dimen/list_text_size" />

    <TextView
        android:id="@+id/item_reference_dark_current"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_margin_top_bottom"
        android:layout_marginTop="@dimen/list_margin_top_bottom"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="@color/color_baseline_text"
        android:textSize="@dimen/list_text_size" />

</LinearLayout>